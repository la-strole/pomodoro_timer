{
    "name": "pomodoro_timer",
    "description": "Simple, lightweight pomodoro timer (https://en.wikipedia.org/wiki/Pomodoro_Technique).",
    "devDependencies": {
        "chai": "^4.3.7",
        "eslint": "^8.45.0",
        "eslint-config-standard": "^17.1.0",
        "esm": "^3.2.25",
        "grunt-eslint": "^24.3.0",
        "grunt-htmlhint": "^0.9.13",
        "http-server": "^14.1.1",
        "mocha": "^10.2.0",
        "selenium-webdriver": "^4.10.0"
    },
    "type": "module",
    "scripts": {
        "test": "npm run run_server && mocha -r esm --timeout 10000",
        "build": "mkdir dist | cp -r ./assets ./dist | cp -r ./public/css ./dist/ | grunt minification",
        "lint": "grunt lint",
        "run_server": "npx http-server --root -s -p 8080 -a 127.0.0.1 public &"
